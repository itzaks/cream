@import 'nib'
@import 'jeet'

body
  background: #ccc
  font-weight: bold
  font-family: arial
  font-size: 14px

.layout-page
  background: #fff
  center(320px)
  padding: 1em

.page-title
  text-align: center

.transaction
  margin: 0.4em 0
  padding: 0.6em 0.6em 1em
  color: #000
  border-bottom: 1px solid #EEE
.transaction-body
  cf()
.transaction-name,
.transaction-amount
  span(1/2, cycle: 2)
.transaction-amount
  text-align: right
.transaction-amount-value
  padding: 0.5em
  box-sizing: border-box
  text-align: center
  color: #FFF
  relative: top 8px
  border-radius: 5px
  .is-income &
    background: #74B415
  .is-expense &
    background: #F5450E
  &:after
    content: 'kr'
    display: inline
.transaction-meta
  color: #A8A8A8
  font-weight: 400
