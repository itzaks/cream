@import 'nib'
@import 'jeet'
color-detail = #A8A8A8
body
  background: #ccc
  font-weight: bold
  font-family: arial
  font-size: 14px

.layout-page
  background: #fff
  center(320px)
  padding: 1em

.page-title,
.page-subtitle
  text-align: center

.page-subtitle
  color: #ccc
  margin-top: 0

.page-title
  margin-bottom: 0.25em

.transaction
  margin: 0.4em 0
  padding: 0.6em 0.6em 1em
  color: #000
  border-bottom: 1px solid #EEE
  cursor: pointer

.transaction:hover
  background: #f1f1f1

@import '_transactions'