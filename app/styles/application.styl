@import 'nib'
@import 'jeet'

color-detail = #A8A8A8
color-gray = #A2A2A2
color-gray-dark = #3A3A3A
color-white = #fff

tag()
  display: inline-block
  border-radius: 0.35em
  margin-right: 0.25em 
  margin-bottom: 0.25em
  padding: 0.15em 0.5em
  background: color-gray-dark
  color: #fff
  font-weight: bold
  font-size: 0.85em
  line-height: 1.5

body
  background: #fff
  font-weight: 400
  font-family: arial
  font-size: 14px

.layout-page
  background: #fff
  center(640px)
  padding: 1em

.page-title,
.page-subtitle
  text-align: center

.page-subtitle
  color: color-gray
  margin-top: 0
  font-size: 1.25em

.page-title
  margin-bottom: 0.25em
  font-size: 1.5em

.page-tag
  tag()
  background: #F5F5F5
  color: #999

@import '_transactions'